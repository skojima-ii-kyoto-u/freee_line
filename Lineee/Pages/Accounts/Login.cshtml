@page
@model LoginModel
@{
    ViewData["Title"] = "ログイン";
}

<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(function () {
        var text = $('#monitoredText');
        text.keyup()
        text.keyup(function () {
            if (text.val().length > 0) {
                $('#postButton').removeAttr('disabled');

            }
            else {
                $('#postButton').attr('disabled', 'disabled');

            }
        })
    });
</script>

<h1></h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.Name" class="control-label"></label>
                <input asp-for="Account.Name" class="form-control" id="monitoredText" />
                <span asp-validation-for="Account.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-default" id="postButton" disabled="disabled" />
            </div>
        </form>
    </div>
</div>